{# index.twig #}
{% extends "_includes/layout.twig" %}

{% block page %}
	<div class="container">
		<header>
	        <h1 class="fs30">hello world</h1>
	    </header>

		<div class="Gallery">
			<section class="Gallery-section">
				<div class="Gallery-slickNav">
					{% for value in index.list %}
						<div class="Gallery-infosWrapper">
							<div class="Gallery-infos">
					            <div class="Gallery-title">{{ value.title }}</div>
					            <div class="Gallery-author">{{ value.author }}</div>
					            <div class="Gallery-city">{{ value.city }}</div>
					            <div class="Gallery-expo">{{ value.expo }}</div>
					            <div class="Gallery-dates">{{ value.dates }}</div>
							</div>
						</div>
			        {% endfor %}
				</div>
			</section>

			<section class="Gallery-section">
				<div class="Gallery-slickFor">
					{% for value in index.list %}
			            <img src="{{ value.src }}">
			        {% endfor %}
				</div>
			</section>
		</div>
	</div>
{% endblock %}
